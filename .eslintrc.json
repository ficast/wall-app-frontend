{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:prettier/recommended",
    "eslint-config-prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "semi": ["error", "never"],
    "quotes": [2, "single"],
    "import/no-unresolved": "off",
    "object-curly-spacing": true,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100
      }
    ]
  },
  "plugins": ["@typescript-eslint"]
}
